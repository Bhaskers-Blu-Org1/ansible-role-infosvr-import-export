ibm_infosvr_impexp_ds_vars_import_values:
{% set contents = lookup('file', item.dest + '.properties') %}
{% set dsparams = lookup('file', item.dest + '.dsparams') %}
{% set lines = contents.split('\n') %}
{% for line in lines %}
{% set properties = line.split('=') %}
{% set vartype = lookup('csvfile', properties[0] + ' file=' + item.dest + '.dsparams delimiter=\\ col=1 default=blah') %}
{% set storetype = lookup('csvfile', properties[0] + ' file=' + item.dest + '.dsparams delimiter=\\ col=3 default=STRING') %}
{% set prompt = lookup('csvfile', properties[0] + ' file=' + item.dest + '.dsparams delimiter=\\ col=7 default=' + properties[0]) %}
  - name: {{ properties[0] }}
{% if vartype == 'User Defined' %}
    type: {{ storetype | upper }}
    prompt: "{{ prompt | replace('"', '\"') }}"
{% endif %}
    value: "{{ properties[1] | replace('"', '\"') }}"
{% endfor %}
